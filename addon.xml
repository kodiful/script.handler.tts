<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.handler.tts"
       name="Text-to-Speech Handler"
       version="1.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.six" version="1.11.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Text-to-Speech Handler</summary>
    <summary lang="ja">音声合成ハンドラー</summary>
    <description lang="en">Enable Kodi addon to use text-to-speech by eSpeak/OpenJTalk</description>
    <description lang="ja">KodiアドオンからeSpeakやOpenJTalkによる音声合成の利用を可能にします</description>
    <disclaimer lang="en">Tested on macOS</disclaimer>
    <disclaimer lang="ja">macOSでの動作を確認</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.tts.wrapper"
       name="TTS Wrapper"
       version="1.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">TTS Wrapper</summary>
    <summary lang="ja">TTS ラッパー</summary>
    <description lang="en">Wrapper enabling Kodi addon to use TTS by eSpeak/OpenJTalk</description>
    <description lang="ja">KodiアドオンからeSpeakやOpenJTalkによる音声合成を利用するためのラッパーです</description>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
